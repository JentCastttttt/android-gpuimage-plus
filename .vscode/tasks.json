{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Debug] Build Android Demo",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--debug",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Debug] Run Android Demo",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--debug",
                "--run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Debug] Build And Run Android Demo",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--debug",
                "--build",
                "--run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Release] Build Android Demo",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--release",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Release] Run Android Demo",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--release",
                "--run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Release] Build And Run Android Demo",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--release",
                "--build",
                "--run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Release] Build Native Library With NDK Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "library/src/main/jni/buildJNI"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Enable Gradle CMake Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--enable-cmake"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Setup Gradle Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--setup-project"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Debug] Enable CMake And Build Project With CMake",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--debug",
                "--enable-cmake",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "[Release] Enable CMake And Build Project With CMake",
            "type": "shell",
            "command": "bash",
            "args": [
                "vscode_tasks.sh",
                "--release",
                "--enable-cmake",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}